class Atm:
    def __init__(self):
        self.pin = ""
        self.balance = 0
        self.menu()

    def menu(self):
        user_input = input(
            """\nHello, how would you like to proceed?
1. Enter 1 to create pin
2. Enter 2 to deposit
3. Enter 3 to withdraw
4. Enter 4 to check balance
5. Enter 5 to exit
Your choice: """
        )

        if user_input == "1":
            print("Create pin")
        elif user_input == "2":
            print("Deposit")
        elif user_input == "3":
            print("Withdraw")
        elif user_input == "4":
            print("Balance")
        elif user_input == "5":
            print("Bye ðŸ‘‹")
        else:
            print("Invalid option, try again.")



b=Atm()
